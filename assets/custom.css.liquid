/* -------------- Popup -------------- */

.popup {
    display: none;
    opacity: 0;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    position: fixed;
    transition: all .3s ease;
    z-index: 999;
}

.popup.active {
    opacity: 1;
}

.popup [data-popup-bg] {
    background: #00000040;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9;
}


.popup .popup-wrapper {
    background: #FFF;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    max-width: 840px;
    width: 100%;
    padding: 30px;
    position: absolute;
    z-index: 10;
}

.popup .popup-header {
    position: relative;
}

.popup .popup-close {
    cursor: pointer;
    top: 50%;
    transform: translateY(-50%);
    right: 0px;
    position: absolute;
}

.popup .popup-close svg {
    width: 25px;
    height: auto;
}
.popup .popup-close-product {
    cursor: pointer;
    top: 50%;
    transform: translateY(-50%);
    right: 0px;
    position: absolute;
}

.popup .popup-close-product svg {
